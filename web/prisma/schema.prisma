generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String            @id @default(cuid())
  email          String            @unique
  name           String?
  passwordHash   String
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  settings       UserSettings?
  subscription   UserSubscription?
  referralCode   String?           @unique
  referralsMade  Referral[]        @relation("ReferrerRelation")
  referredBy     Referral?         @relation("ReferredRelation")
  scamReports    ScamReport[]
  subscriptions  TrackedSubscription[]
  dataBrokers    DataBroker[]
  priceWatches   PriceWatch[]
  alertLogs      AlertLog[]
}

model ScamReport {
  id          String   @id @default(cuid())
  userId      String
  type        String   // call, text, email
  content     String   // the suspicious message content
  sender      String?  // phone number, email address, etc.
  riskScore   Int      // 0-100
  riskLevel   String   // low, medium, high, critical
  category    String?  // phishing, impersonation, lottery, tech_support, romance, investment, other
  redFlags    String?  // JSON array of identified red flags
  aiAnalysis  String?  // full AI analysis text
  action      String?  // blocked, reported, ignored
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

model TrackedSubscription {
  id              String    @id @default(cuid())
  userId          String
  name            String    // e.g. "Netflix", "Spotify"
  cost            Float     // monthly cost
  billingCycle    String    @default("monthly") // monthly, yearly, weekly
  renewalDate     DateTime?
  status          String    @default("active") // active, paused, cancelled, flagged
  category        String?   // entertainment, productivity, fitness, news, other
  cancellationUrl String?
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model DataBroker {
  id            String    @id @default(cuid())
  userId        String
  brokerName    String    // e.g. "Spokeo", "WhitePages", "BeenVerified"
  status        String    @default("pending") // pending, submitted, confirmed, re-listed
  submittedDate DateTime?
  confirmedDate DateTime?
  lastChecked   DateTime?
  optOutUrl     String?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@unique([userId, brokerName])
}

model PriceWatch {
  id             String   @id @default(cuid())
  userId         String
  productName    String
  productUrl     String
  currentPrice   Float?
  lowestPrice    Float?
  highestPrice   Float?
  priceSnapshots String?  // JSON array of { price, date, context } objects
  flagged        Boolean  @default(false) // flagged for suspicious price differences
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AlertLog {
  id         String   @id @default(cuid())
  userId     String
  type       String   // scam, subscription, privacy, price, system
  title      String
  body       String
  actionable Boolean  @default(false)
  actionUrl  String?
  read       Boolean  @default(false)
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

model UserSettings {
  id                  String   @id @default(cuid())
  userId              String   @unique
  notifyScams         Boolean  @default(true)
  notifySubscriptions Boolean  @default(true)
  notifyPrivacy       Boolean  @default(true)
  notifyPriceWatch    Boolean  @default(true)
  quietHoursEnabled   Boolean  @default(false)
  quietStart          String   @default("22:00")
  quietEnd            String   @default("08:00")
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserSubscription {
  id               String    @id @default(cuid())
  userId           String    @unique
  plan             String    @default("free") // free | solo | family
  status           String    @default("active") // active | trialing | canceled | expired
  trialEndsAt      DateTime?
  currentPeriodEnd DateTime?
  canceledAt       DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Referral {
  id         String   @id @default(cuid())
  referrerId String
  referredId String   @unique
  status     String   @default("pending") // pending | active
  createdAt  DateTime @default(now())
  referrer   User     @relation("ReferrerRelation", fields: [referrerId], references: [id], onDelete: Cascade)
  referred   User     @relation("ReferredRelation", fields: [referredId], references: [id], onDelete: Cascade)

  @@index([referrerId])
}
